@model UpdateCommentDto
@{
    ViewData["Title"] = "UpdateComment";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yorum Güncelleme</h4>
                <form asp-controller="Comment" asp-action="UpdateComment" asp-area="Admin" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="UserCommentId" />
                    <div class="row">
                        <div class="col-md-12">
                            <fieldset class="form-group">
                                <label>Kullanıcı Adı Soyadı</label>
                                <input class="form-control" autofocus asp-for="NameSurname" placeholder="Başlık Giriniz" type="text">
                            </fieldset>
                            <fieldset class="form-group">
                                <label>Kullanıcı Email</label>
                                <input class="form-control" asp-for="Email" placeholder="Başlık Giriniz" type="text">
                            </fieldset>
                            <fieldset class="form-group">
                                <label>Kullanıcı Profile Resmi</label>
                                <input class="form-control" asp-for="ImageUrl" placeholder="Başlık Giriniz" type="text">
                            </fieldset>
                            <fieldset class="form-group">
                                <label>Ürün</label>
                                <input class="form-control" asp-for="ProductId" type="text">
                            </fieldset>
                            <fieldset class="form-group">
                                <label>Yorum Başlık</label>
                                <input class="form-control" asp-for="Title" placeholder="Başlık Giriniz" type="text">
                            </fieldset>
                            <fieldset class="form-group">
                                <label>Yorum İçerik</label>
                                <textarea class="form-control" asp-for="CommentDetail" type="text" cols="5"></textarea>
                            </fieldset>
                            <fieldset class="form-group">
                                <input class="form-control" asp-for="Rating" type="number">
                            </fieldset>
                            <button class="btn btn-warning" type="submit">Güncelle</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>

    </div>
</section>

