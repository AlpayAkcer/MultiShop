@model UpdateProductDetailDto

@{
    ViewData["Title"] = "CreateProductDetail";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Ürün Özellik Güncelleme</h4>
                <form method="post" asp-controller="ProductDetail" asp-action="UpdateProductDetail" asp-area="Admin" enctype="multipart/form-data">
                    <input type="hidden" asp-for="ProductDetailId" />
                    <div class="row">
                        <div class="col-md-12">
                            <fieldset class="form-group">
                                <select class="form-control" asp-for="ProductId">
                                    <option value="0">Ürün Seçiniz</option>
                                    @foreach (var item in ViewBag.ProductList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </fieldset>
                            <fieldset class="form-group">
                                <label>Başlık</label>
                                <input class="form-control" type="text" asp-for="Info">
                            </fieldset>
                            <fieldset class="form-group">
                                <label>Açıklama</label>
                                <textarea asp-for="Description" cols="5" class="form-control"></textarea>
                            </fieldset>
                            <button class="btn btn-warning" type="submit">Güncelle</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>

    </div>
</section>







