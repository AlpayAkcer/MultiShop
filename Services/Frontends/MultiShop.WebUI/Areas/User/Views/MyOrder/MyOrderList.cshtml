@model List<ResultOrderingByUserIdDto>
@{
    ViewData["Title"] = "MyOrderList";
    Layout = "~/Areas/User/Views/UserLayout/Index.cshtml";
    int count = 0;
}
<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Sipariş Listesi</h4>
                <div class="table-responsive pt-3">
                    <table class="table table-bordered">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Toplam Fiyat</th>
                                <th>Sipariş Tarihi</th>
                                <th>Sipariş Detayları</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                count++;

                                <tr class="">
                                    <th>@count</th>
                                    <td><b>@item.TotalPrice.ToString("C")</b></td>
                                    <td><b>@(((DateTime)item.OrderDate).ToString("dd-MMM-yyyy"))</b></td>
                                    <td><a href="#" class="btn btn-warning"><b>Sipariş Detayları</b></a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>