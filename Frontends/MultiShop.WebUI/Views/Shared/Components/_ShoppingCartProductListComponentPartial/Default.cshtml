@model BasketTotalDto
<div class="col-lg-8 table-responsive mb-5">
    <table class="table table-light table-borderless table-hover text-center mb-0">
        <thead class="thead-dark">
            <tr>
                <th>#</th>
                <th>Ürün</th>
                <th>Fiyat</th>
                <th>Adet</th>
                <th>Miktar</th>
                <th>Toplam</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var item in Model.BasketItems)
            {
                <tr>
                    <td class="align-middle">
                        <img src="@item.PictureUrl" alt="" style="width: 50px;">
                    </td>
                    <td style=" text-align: left;">
                        @item.ProductName
                    </td>
                    <td class="align-middle">@item.Price</td>
                    <td class="align-middle">@item.Quantity</td>
                    <td class="align-middle">
                        <div class="input-group quantity mx-auto" style="width: 100px;">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-primary btn-minus">
                                    <i class="fa fa-minus"></i>
                                </button>
                            </div>
                            <input type="text" asp-for="Quantity" class="form-control form-control-sm bg-secondary border-0 text-center" value="1">
                            <div class="input-group-btn">
                                <button class="btn btn-sm btn-primary btn-plus">
                                    <i class="fa fa-plus"></i>
                                </button>
                            </div>
                        </div>
                    </td>
                    <td class="align-middle">@Convert.ToDecimal(item.Price * item.Quantity)</td>
                    <td class="align-middle">
                        <a class="btn btn-sm btn-danger" asp-route-productid="@item.ProductId" asp-controller="ShoppingCart" asp-action="RemoveBasketItem"><i class="fa fa-times"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>