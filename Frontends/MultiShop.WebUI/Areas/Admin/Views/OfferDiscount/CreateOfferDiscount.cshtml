@model CreateOfferDiscountDto
@{
    ViewData["Title"] = "CreateOfferDiscount";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yeni Indirim Girişi</h4>
                <form method="post" asp-controller="OfferDiscount" asp-action="CreateOfferDiscount" asp-area="Admin">
                    <div class="row">
                        <div class="col-md-8">
                            <fieldset class="form-group">
                                <label>Başlık</label>
                                <input class="form-control" autofocus asp-for="Title" placeholder="Başlık Giriniz" type="text">
                            </fieldset>
                            <fieldset class="form-group">
                                <label>Alt Başlık</label>
                                <input class="form-control" asp-for="SubTitle" placeholder="Alt Başlık Giriniz" type="text">
                            </fieldset>
                            <fieldset class="form-group">
                                <label>Resim</label>
                                <input class="form-control" asp-for="PictureUrl" placeholder="Resim Giriniz" type="text">
                                <fieldset class="form-group">
                                    <label>Buton İsmi</label>
                                    <input class="form-control" asp-for="ButtonTitle" placeholder="Buton Adı Giriniz" type="text">
                                </fieldset>
                                <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>

    </div>
</section>



