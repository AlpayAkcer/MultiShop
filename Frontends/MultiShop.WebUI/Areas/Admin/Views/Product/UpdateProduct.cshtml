@model UpdateProductDto
@{
    ViewData["Title"] = "UpdateProduct";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}


<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yeni Ürün Girişi</h4>
                <form method="post" asp-controller="Product" asp-action="UpdateProduct" asp-area="Admin">
                    <input type="hidden" asp-for="ProductId" />
                    <div class="row">
                        <div class="col-md-8">
                            <fieldset class="form-group">
                                <input class="form-control" autofocus asp-for="Name" placeholder="Ürün Adını Giriniz" type="text">
                            </fieldset>
                            <fieldset class="form-group">
                                <select class="form-control" asp-for="CategoryId">
                                    <option value="0">Kategori Seçiniz</option>
                                    @foreach (var item in ViewBag.CategoryList)
                                    {
                                        <option value="@item.Value">@item.Text</option>
                                    }
                                </select>
                            </fieldset>
                            <fieldset class="form-group">
                                <input class="form-control" asp-for="Price" placeholder="Ürün Fiyatı" type="text">
                            </fieldset>
                            <fieldset class="form-group">
                                <textarea class="form-control" id="summernote" asp-for="Description" placeholder="Açıklama Giriniz" type="text" cols="5"></textarea>
                            </fieldset>
                            <fieldset class="form-group">
                                <input class="form-control" asp-for="PictureUrl" type="text">
                            </fieldset>
                            <button class="btn btn-primary" type="submit">Kaydet</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>

    </div>
</section>

