@model List<ResultProductPictureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<h2>Index</h2>

<table class="table table-responsive">
    <thead>
        <tr>
            <th>#</th>
            <th>#</th>
            <th>#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ProductId
                </td>
                <td>
                    <img src="@item.PictureUrl" width="100px" />
                </td>
                <td>
                    <a asp-route-id="@item.ProductImageId" asp-controller="ProductPicture" asp-action="UpdateProductPicture" class="btn btn-info">
                        <i class="fa fa-edit"></i>
                    </a>
                    <a asp-route-id="@item.ProductImageId" asp-controller="ProductPicture" asp-action="DeleteProductPicture" class="btn btn-danger">
                        <i class="fa fa-eraser"></i>
                    </a>
                </td>
            </tr>

        }
    </tbody>
</table>