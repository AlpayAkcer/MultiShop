@model UpdateBrandDto
@{
    ViewData["Title"] = "Update Brand";
    Layout = "~/Areas/Admin/Views/AdminLayout/Index.cshtml";
}

<section class="content container-fluid">
    <div class="row">
        <div class="col-md-12">
            <div class="chart-box">
                <h4>Yeni Marka Girişi</h4>
                <form asp-controller="Brand" asp-action="UpdateBrand" asp-area="Admin" method="post" enctype="multipart/form-data">
                    <input type="hidden" asp-for="BrandId" />
                    <div class="row">
                        <div class="col-md-8">
                            <fieldset class="form-group">
                                <input class="form-control" autofocus asp-for="BrandName" placeholder="Marka Adını Giriniz" type="text">
                            </fieldset>
                            <fieldset class="form-group">
                                <input class="form-control" asp-for="ImageUrl" type="text">
                            </fieldset>
                            <button class="btn btn-warning" type="submit">Güncelle</button>
                        </div>

                    </div>
                </form>
            </div>
        </div>

    </div>
</section>



